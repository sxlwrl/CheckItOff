<html lang="en">
{{> head}}
<script>
    if (window.performance && window.performance.getEntriesByType('navigation')[0].type === 'reload') {
        window.location.href = '/';
    }
</script>
  <body>
    <main>

      <section class="section--welcome">
          <img src="/img/welcome_login.png" class="image-welcome">
          <h1 class='copyright'>Â©Vadym & Alina</h1>
      </section>
        {{> preloader}}

      <div class="welcome">
        <section class="section--login">
          <img
            src="/img/logo_main.png"
            class="logo-main"
            alt="logo CheckItOff"
          />
          <h2 class="label" id="label--1">
            CheckItOff: Your personal productivity partner!
          </h2>
          <form action="/auth/login" method="post" class="login__form">
            <input class="input-field unvisible" />
            <input
              type="text"
              class="input-field login-name"
              id="login"
              name="data"
              placeholder="Username or e-mail"
            />
            <input
              type="password"
              class="input-field login-password"
              id="password"
              maxlength="64"
              name="password"
              placeholder="Password"
            />

            <input class="input-field unvisible" />
            {{#if msg}}
              <p class="{{msg_type}}">{{msg}}</p>
            {{/if}}
            <button class="btn btn--login">Login</button>
          </form>
            <h3 class="btn-sign-back">Still not with us? <a href="/register">Sign up</a></h3>
        </section>
      </div>
    </main>
  </body>
</html>